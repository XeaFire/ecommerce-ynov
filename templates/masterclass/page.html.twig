{% extends 'base.html.twig' %}

{% block title %}{{ page.title }} - {{ masterclass.title }}{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    .page-section {
        min-height: 100vh;
        background: linear-gradient(rgba(0, 0, 0, 0.9), rgba(0, 0, 0, 0.9)),
                    url('https://images.unsplash.com/photo-1517245386807-bb43f82c33c4?ixlib=rb-1.2.1&auto=format&fit=crop&w=2850&q=80');
        background-size: cover;
        background-position: center;
        padding-top: 120px;
        padding-bottom: 50px;
    }
    
    .page-card {
        background: rgba(20, 20, 20, 0.95);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(0, 255, 136, 0.1);
        border-radius: 15px;
        overflow: hidden;
    }
    
    .page-sidebar {
        background: rgba(10, 10, 10, 0.9);
        border-right: 1px solid rgba(0, 255, 136, 0.1);
        padding: 1.5rem;
    }
    
    .page-progress {
        margin-bottom: 2rem;
    }
    
    .page-progress-title {
        color: #fff;
        font-size: 1.2rem;
        margin-bottom: 1rem;
    }
    
    .page-progress-bar {
        height: 10px;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 5px;
        overflow: hidden;
        margin-bottom: 0.5rem;
    }
    
    .page-progress-fill {
        height: 100%;
        background: var(--primary);
        border-radius: 5px;
    }
    
    .page-progress-text {
        color: #aaa;
        font-size: 0.9rem;
        text-align: right;
    }
    
    .page-pages-title {
        color: #fff;
        font-size: 1.2rem;
        margin-bottom: 1rem;
        padding-bottom: 0.5rem;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }
    
    .page-page-item {
        display: flex;
        align-items: center;
        padding: 0.75rem;
        border-radius: 8px;
        margin-bottom: 0.5rem;
        transition: all 0.3s ease;
        text-decoration: none;
        color: #fff;
    }
    
    .page-page-item:hover {
        background: rgba(0, 255, 136, 0.1);
        color: var(--primary);
    }
    
    .page-page-item.active {
        background: rgba(0, 255, 136, 0.15);
        color: var(--primary);
    }
    
    .page-page-number {
        width: 30px;
        height: 30px;
        background: rgba(0, 255, 136, 0.1);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        margin-right: 1rem;
    }
    
    .page-page-title {
        flex-grow: 1;
        font-size: 0.9rem;
    }
    
    .page-page-status {
        width: 20px;
        height: 20px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-left: 0.5rem;
    }
    
    .page-page-status.completed {
        background: var(--primary);
        color: var(--dark);
    }
    
    .page-page-status.incomplete {
        background: rgba(255, 255, 255, 0.1);
        color: #aaa;
    }
    
    .page-content {
        padding: 2rem;
    }
    
    .page-header {
        margin-bottom: 2rem;
        padding-bottom: 1rem;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }
    
    .page-title {
        color: var(--primary);
        font-size: 2rem;
        margin-bottom: 0.5rem;
        text-shadow: 0 0 10px rgba(0, 255, 136, 0.3);
    }
    
    .page-meta {
        color: #aaa;
        font-size: 0.9rem;
        display: flex;
        align-items: center;
    }
    
    .page-body {
        color: #fff;
        line-height: 1.8;
        font-size: 1.1rem;
        margin-bottom: 3rem;
    }
    
    .page-body p {
        margin-bottom: 1.5rem;
    }
    
    .page-body h2 {
        color: var(--primary);
        margin-top: 2rem;
        margin-bottom: 1rem;
        font-size: 1.8rem;
    }
    
    .page-body h3 {
        color: #fff;
        margin-top: 1.5rem;
        margin-bottom: 1rem;
        font-size: 1.5rem;
    }
    
    .page-body ul, .page-body ol {
        margin-bottom: 1.5rem;
        padding-left: 2rem;
    }
    
    .page-body li {
        margin-bottom: 0.5rem;
    }
    
    .page-body code {
        background: rgba(0, 0, 0, 0.3);
        padding: 0.2rem 0.4rem;
        border-radius: 4px;
        font-family: monospace;
    }
    
    .page-body pre {
        background: rgba(0, 0, 0, 0.3);
        padding: 1rem;
        border-radius: 8px;
        margin-bottom: 1.5rem;
        overflow-x: auto;
    }
    
    .page-body pre code {
        background: transparent;
        padding: 0;
    }
    
    .page-body img {
        max-width: 100%;
        border-radius: 8px;
        margin-bottom: 1.5rem;
    }
    
    .page-body blockquote {
        border-left: 4px solid var(--primary);
        padding-left: 1rem;
        margin-left: 0;
        margin-bottom: 1.5rem;
        color: #aaa;
    }
    
    .page-navigation {
        display: flex;
        justify-content: space-between;
        margin-top: 3rem;
        padding-top: 1.5rem;
        border-top: 1px solid rgba(255, 255, 255, 0.1);
    }
    
    .page-complete-form {
        text-align: center;
        margin-top: 3rem;
        padding: 2rem;
        background: rgba(0, 255, 136, 0.05);
        border-radius: 10px;
        border: 1px solid rgba(0, 255, 136, 0.1);
    }
    
    .page-complete-title {
        color: #fff;
        font-size: 1.5rem;
        margin-bottom: 1rem;
    }
    
    .page-complete-text {
        color: #aaa;
        margin-bottom: 1.5rem;
    }
</style>
{% endblock %}

{% block body %}
<section class="page-section">
    <div class="container">
        {% for message in app.flashes('success') %}
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}

        {% for message in app.flashes('error') %}
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
        
        {% for message in app.flashes('info') %}
            <div class="alert alert-info alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
        
        <div class="page-card">
            <div class="row g-0">
                <div class="col-md-4 col-lg-3">
                    <div class="page-sidebar">
                        <div class="page-progress">
                            <h3 class="page-progress-title">Votre progression</h3>
                            
                            {% set completedPages = progress.completedPages|length %}
                            {% set totalPages = masterclass.pages|length %}
                            {% set progressPercent = totalPages > 0 ? (completedPages / totalPages * 100)|round : 0 %}
                            
                            <div class="page-progress-bar">
                                <div class="page-progress-fill" style="width: {{ progressPercent }}%"></div>
                            </div>
                            <div class="page-progress-text">{{ progressPercent }}% terminé</div>
                        </div>
                        
                        <h3 class="page-pages-title">Contenu du cours</h3>
                        
                        {% if masterclass.pages|length > 0 %}
                            <div class="page-pages-list">
                                {% for p in masterclass.pages %}
                                    <a href="{{ path('app_masterclass_page', {'id': masterclass.id, 'pageId': p.id}) }}" class="page-page-item {% if p.id == page.id %}active{% endif %}">
                                        <div class="page-page-number">{{ p.position }}</div>
                                        <div class="page-page-title">{{ p.title }}</div>
                                        <div class="page-page-status {% if p.id in progress.completedPages %}completed{% else %}incomplete{% endif %}">
                                            <i class="fas {% if p.id in progress.completedPages %}fa-check{% else %}fa-circle{% endif %}"></i>
                                        </div>
                                    </a>
                                {% endfor %}
                            </div>
                        {% else %}
                            <p class="text-muted">Aucune page disponible pour le moment.</p>
                        {% endif %}
                        
                        <div class="mt-4">
                            <a href="{{ path('app_masterclass_learn', {'id': masterclass.id}) }}" class="btn btn-outline-light w-100">
                                <i class="fas fa-arrow-left me-2"></i>Retour à l'accueil du cours
                            </a>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-8 col-lg-9">
                    <div class="page-content">
                        <div class="page-header">
                            <h1 class="page-title">{{ page.title }}</h1>
                            <div class="page-meta">
                                Page {{ page.position }} sur {{ masterclass.pages|length }}
                            </div>
                        </div>
                        
                        <div class="page-body">
                            {{ page.content|raw }}
                        </div>
                        
                        {% if page.id not in progress.completedPages %}
                            <div class="page-complete-form">
                                <h3 class="page-complete-title">Avez-vous terminé cette page ?</h3>
                                <p class="page-complete-text">Marquez cette page comme terminée pour suivre votre progression.</p>
                                
                                <form action="{{ path('app_masterclass_page_complete', {'id': masterclass.id, 'pageId': page.id}) }}" method="post">
                                    <button type="submit" class="btn btn-neon">
                                        <i class="fas fa-check-circle me-2"></i>Marquer comme terminée
                                    </button>
                                </form>
                            </div>
                        {% else %}
                            <div class="alert alert-success text-center">
                                <i class="fas fa-check-circle me-2"></i>
                                Vous avez déjà terminé cette page !
                            </div>
                        {% endif %}
                        
                        <div class="page-navigation">
                            {% set prevPage = null %}
                            {% set nextPage = null %}
                            
                            {% for p in masterclass.pages %}
                                {% if p.position == page.position - 1 %}
                                    {% set prevPage = p %}
                                {% endif %}
                                {% if p.position == page.position + 1 %}
                                    {% set nextPage = p %}
                                {% endif %}
                            {% endfor %}
                            
                            <div>
                                {% if prevPage %}
                                    <a href="{{ path('app_masterclass_page', {'id': masterclass.id, 'pageId': prevPage.id}) }}" class="btn btn-outline-light">
                                        <i class="fas fa-arrow-left me-2"></i>Page précédente
                                    </a>
                                {% endif %}
                            </div>
                            
                            <div>
                                {% if nextPage %}
                                    <a href="{{ path('app_masterclass_page', {'id': masterclass.id, 'pageId': nextPage.id}) }}" class="btn btn-outline-primary">
                                        Page suivante<i class="fas fa-arrow-right ms-2"></i>
                                    </a>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %} 